<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnPcm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="尝试PCM"
        android:textAllCaps="false"
        app:layout_constraintEnd_toStartOf="@id/btnWavAudioTrack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnWavAudioTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="尝试WAV/AudioTrack"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@id/btnPcm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnWavMediaPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="尝试WAV/MediaPlayer"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="@id/btnPcm"
        app:layout_constraintEnd_toEndOf="@id/btnPcm"
        app:layout_constraintTop_toBottomOf="@id/btnPcm" />

</androidx.constraintlayout.widget.ConstraintLayout>